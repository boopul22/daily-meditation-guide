{
  "name": "daily-meditation-guide",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite build && wrangler pages dev --persist-to=.wrangler/state",
    "dev:remote": "vite --mode remote",
    "dev:vite": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "db:schema": "wrangler d1 execute daily-meditation-guide-db --local --persist-to=.wrangler/state --file=schema.sql",
    "db:seed": "wrangler d1 execute daily-meditation-guide-db --local --persist-to=.wrangler/state --file=seed.sql"
  },
  "dependencies": {
    "@tiptap/extension-image": "^3.19.0",
    "@tiptap/extension-link": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/pm": "^3.19.0",
    "@tiptap/react": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260214.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wrangler": "^4.65.0"
  }
